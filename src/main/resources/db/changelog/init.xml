<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create customer table" author="andrew">
        <createTable tableName="customer">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(100)"/>
            <column name="chat_id" type="varchar(30)"/>
            <column name="name" type="varchar(50)"/>
            <column name="surname" type="varchar(50)"/>
            <column name="phone" type="varchar(30)"/>
            <column name="city" type="varchar(50)"/>
            <column name="address" type="varchar(200)"/>
        </createTable>
    </changeSet>

    <changeSet id="create app_user table" author="andrew">
        <createTable tableName="app_user">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="varchar(100)"/>
            <column name="encoded_password" type="varchar(255)"/>
            <column name="is_blocked" type="boolean"/>
        </createTable>
    </changeSet>

    <changeSet id="create product_category table" author="andrew">
        <createTable tableName="product_category">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="order" type="int(4)"/>
        </createTable>
    </changeSet>

    <changeSet id="create product table" author="andrew">
        <createTable tableName="product">
            <column name="id" type="uuid">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="description" type="varchar(2000)"/>
            <column name="photo_url" type="varchar(2000)"/>
            <column name="price" type="double"/>
            <column name="order" type="int(4)"/>
            <column name="category_id" type="uuid">
                <constraints
                        foreignKeyName="fk_product_category_id"
                        referencedTableName="product_category"
                        referencedColumnNames="id"
                        nullable="false"
                />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>